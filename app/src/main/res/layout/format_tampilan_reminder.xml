<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cardview_reminder"
        android:backgroundTint="@color/tosca">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/nomorobat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nomor Kotak Obat"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/namaobat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/nomorobat"
                android:hint="Nama Obat"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/datetime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/namaobat"
                android:hint="Waktu Pengingat"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/hapus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/baseline_delete_forever_24"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"/>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>